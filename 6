  <button onclick="toggleModo()">Cambiar Modo</button>

  <script>
    let modoOscuro = false;
    function toggleModo() {
      modoOscuro = !modoOscuro;
      document.body.style.backgroundColor = modoOscuro ? "#222" : "#fff";
      document.body.style.color = modoOscuro ? "#fff" : "#000";
    }
  </script>

